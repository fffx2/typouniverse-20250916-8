      "typeScale": {
        "body": "14px",
        "bodyMin": "12px",
        "title": "24px",
        "subtitle": "20px"
      },
      "defaultSize": "14px",
      "minimumSize": "12px",
      "lineHeight": "1.5",
      "contrast": "WCAG 2.1 AA (4.5:1) 기준",
      "description": "Windows는 Effective Pixels로 DPI에 관계없이 일관된 크기를 제공하며, 14px를 표준으로 합니다."
    },
    "tablet": {
      "source": "iPadOS & Android Tablet Guidelines",
      "font": {
        "family": "SF Pro Display / Roboto",
        "unit": "pt / sp",
        "keyFeature": "Adaptive Layouts"
      },
      "typeScale": {
        "body": "17pt / 16sp",
        "bodyMin": "13pt / 12sp",
        "headline": "28pt / 28sp",
        "title": "22pt / 22sp"
      },
      "defaultSize": "17pt (iOS) / 16sp (Android)",
